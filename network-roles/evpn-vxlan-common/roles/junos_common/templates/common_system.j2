system {
    services {
        extension-service {
            request-response {
                grpc {
                    clear-text {
                        address 0.0.0.0;
                        port 32767;
                    }
                    max-connections 30;
                    skip-authentication;
                }
            }
            notification {
                allow-clients {
                    address 0.0.0.0/0;
                }
            }
        }
    }
}
